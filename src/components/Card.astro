---
interface Props {
	team: string;
	name: string;
	driverImage: string;
	position: number;
	points: string | number;
	wins: number;

}

const { team, name, driverImage, position, points, wins } = Astro.props;
---


<article class="max-w-sm rounded overflow-hidden shadow-lg transition duration-300 ease-in-out transform hover:bg-gray-700 hover:shadow-xl">
	<img class="w-full" src={driverImage} alt={name} />
	<div class="px-6 py-4 text-white">
	  <div class="font-bold text-xl mb-2">{name}</div>
	  <p class="text-base">
		Team: {team}<br />
		Position: {position}<br />
		Points: {points}<br />
		Wins: {wins}<br />
	  </p>
	</div>
  </article>
